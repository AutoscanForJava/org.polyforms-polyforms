<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean primary="true" class="org.polyforms.repository.support.GenericEntityClassResolver">
		<constructor-arg  value="org.polyforms.repository.integration.EntityRepository" />
	</bean>

	<bean primary="true" class="org.polyforms.repository.support.InheritedRepositoryMatcher">
		<constructor-arg value="org.polyforms.repository.integration.EntityRepository" />
	</bean>
</beans>